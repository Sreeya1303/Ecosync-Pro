{
    "name": "iot-capstone-system",
    "version": "1.0.0",
    "description": "IoT Environmental Monitoring System with AI",
    "scripts": {
        "start": "concurrently \"npm run start:backend\" \"npm run start:frontend\"",
        "start:backend": "cd backend && python3 -m uvicorn app.main:app --reload --host 0.0.0.0 --port 8000",
        "start:frontend": "cd frontend && npm run dev",
        "build:frontend": "cd frontend && npm run build"
    },
    "devDependencies": {
        "concurrently": "^8.2.2"
    },
    "keywords": [
        "iot",
        "environmental-monitoring",
        "ai",
        "react",
        "fastapi"
    ],
    "author": "",
    "license": "ISC"
}